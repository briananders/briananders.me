  <head>
    <meta charset="utf-8">
    <meta name=description content="<%= data.page.description ? "#{data.page.description}" : "Brian Anders's personal website, a web developer at Nest Labs." %>">
    <meta name=author content="Brian Anders">
    <meta name="viewport" id="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,initial-scale=1.0" />
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">


    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="<%= data.page.title ? "#{data.page.title} | Brian Anders" : "Brian Anders" %>">
    <meta itemprop="description" content="<%= data.page.description ? "#{data.page.description}" : "Brian Anders's personal website, a web developer at Nest Labs." %>">
    <meta itemprop="image" content="http://briananders.me/favicon_base-6f2f64af.png">

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="http://briananders.me/favicon_base-6f2f64af.png">
    <meta name="twitter:site" content="@imBrianAnders">
    <meta name="twitter:title" content="<%= data.page.title ? "#{data.page.title} | Brian Anders" : "Brian Anders" %>">
    <meta name="twitter:description" content="<%= data.page.description ? "#{data.page.description}" : "Brian Anders's personal website, a web developer at Nest Labs." %>">
    <meta name="twitter:creator" content="@imBrianAnders">
    <!-- Twitter summary card with large image must be at least 280x150px -->
    <meta name="twitter:image:src" content="http://briananders.me/favicon_base-6f2f64af.png">

    <!-- Open Graph data -->
    <meta property="og:title" content="<%= data.page.title ? "#{data.page.title} | Brian Anders" : "Brian Anders" %>" />
    <meta property="og:type" content="profile" />
    <meta property="og:url" content="http://briananders.me/" />
    <meta property="og:image" content="http://briananders.me/favicon_base-6f2f64af.png" />
    <meta property="og:description" content="<%= data.page.description ? "#{data.page.description}" : "Brian Anders's personal website, a web developer at Nest Labs." %>" />
    <meta property="og:site_name" content="Brian Anders's personal website" />


    <link rel="apple-touch-icon" href="apple-touch-icon.png"/>
    <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-precomposed.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="apple-touch-icon-57x57-precomposed.png"/>
    <link rel="apple-touch-icon" sizes="57x57" href="apple-touch-icon-57x57-precomposed.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="apple-touch-icon-72x72-precomposed.png"/>
    <link rel="apple-touch-icon" sizes="72x72" href="apple-touch-icon-72x72-precomposed.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="apple-touch-icon-114x114-precomposed.png"/>
    <link rel="apple-touch-icon" sizes="114x114" href="apple-touch-icon-114x114-precomposed.png"/>
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="apple-touch-icon-144x144-precomposed.png"/>
    <link rel="apple-touch-icon" sizes="144x144" href="apple-touch-icon-144x144-precomposed.png"/>


    <link rel="shortcut icon" href="/favicon.ico" />

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title ? "#{data.page.title} | Brian Anders" : "Brian Anders" %></title>

    <%= stylesheet_link_tag "all" %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  </head>

  <body class="<%= page_classes %> <%= data.page.classes %>">
    <div class="container">
      <nav>
        <a class="index" href="/">Media</a>
        <a class="work" href="/work/">Work</a>
        <a class="blog" href="/blog/">Blog</a>
      </nav>
      <% if data.page.type == "profile" %>
        <header id="header">
          <h1 class="brian-anders">Brian Anders</h1>
          <div class="profile">
            <%= partial "partials/profile-svg" %>
          </div>
        </header>
      <% end %>
      <div class="content">

        <%= yield %>

      </div>
      <%= partial "partials/links" %>
      <%= partial "partials/footer" %>
    </div>

    <%= javascript_include_tag "all" %>
  </body>
</html>