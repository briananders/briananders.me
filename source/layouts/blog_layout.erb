<% wrap_layout :layout do %>

  <h1>
    <%= data.page.title %>
    <div class="blog-date">
      (<%= data.page.date %>)
    </div>
  </h1>

  <%= yield %>

  <% if data.page.tags == "Story" %>
    <div clas="disclaimer">
      &ast;&nbsp;Not all of these stories are mine, some are from family members.
    </div>
  <% end %>
<% end %>